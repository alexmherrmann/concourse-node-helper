{
    "compilerOptions": {
        "lib": ["es2015"], 
        "target": "es5",                          
        "module": "commonjs",                    
        "outDir": "dist",                        
        "rootDir": "src",                         
        "strict": true,                          
        "esModuleInterop": true,                  
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true                     
    },
    "include": [
        "src/**/*.ts"                             
    ],
    "exclude": [
        "node_modules",                          
        "**/*.test.ts"                            
    ]
}